{
    "compilerOptions": {
        "baseUrl": "src",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "target": "es2018",
        "removeComments": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
